package scanner;

import java.util.Scanner;

//5번 : 입력 메소드 실습

//클래스명, 패키지명 바꾸기 단축키 : 좌측 패키지나 클래스 클릭 후 F2키
public class ScannerTask01 {
	public static void main(String[] args) {
		// 두 정수를 입력받고 합을 출력하기
		// next 메소드를 사용한다
		// [입출력 결과]
		// 정수1 입력 : 10
		// 정수2 입력 : 20
		// 두 정수의 합은 30입니다.
		
		// 로직구성 먼저 진행!
		
		//1. 입력클래스 import
		Scanner sc = new Scanner(System.in);
		//2. 출력 메시지
		System.out.println("[입출력 결과] ");
		//3. 입력메소드 .next() 2개
		String int1 = sc.next();
		String int2 = sc.next();
		//4. 출력
		System.out.println("두 정수의 합은 %d입니다.");
		
		
	}
}
